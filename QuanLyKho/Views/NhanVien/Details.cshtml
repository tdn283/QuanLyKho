@using QuanLyKho.ViewModels
@model QuanLyKho.ViewModels.NhanVienViewModels.NhanVienViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Chi tiết nhân viên</h2>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Mã người dùng:</strong> @Model.MaNguoiDung</p>
                    <p><strong>Họ và tên:</strong> @Model.HoVaTen</p>
                    <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Vai trò:</strong> @Model.TenVaiTro</p>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-start mt-4">
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </div>
</div>