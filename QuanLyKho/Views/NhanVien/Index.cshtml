@using QuanLyKho.ViewModels.NhanVienViewModels
@model IEnumerable<NhanVienViewModel>
@{
    ViewData["Title"] = "Index";
}


<div>
    <div class="row">
        <h2>Danh sách nhân viên</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <form asp-action="Index" class="flex-grow-1 me-3">
                <div class="row">
                    <div class="col-md-4">
                        <input name="searchString" class="form-control" placeholder="Tên nhân viên" value="@ViewData["searchString"]" />
                    </div>
                    <div class="col-md-2">
                        <select name="vaiTroFilter" class="form-select" asp-items="@ViewBag.VaiTroList" id="exampleSelect1">
                            <option value="">Tất cả vai trò</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        <a asp-action="Index" class="btn btn-secondary">Reset</a>
                    </div>
                </div>
            </form>
            <a asp-action="Create" class="btn btn-success">Thêm nhân viên</a>
        </div>
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Mã nhân viên
                        </th>
                        <th>
                            Tên nhân viên
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Vai trò
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.MaNguoiDung)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.HoVaTen)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.SoDienThoai)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.TenVaiTro)
                            </td>
                            <td class="align-middle">
                                <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.MaNguoiDung">Edit</a>
                                <a type="button" class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.MaNguoiDung">Details</a>
                                <a type="button" class="btn btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa nhân viên này không?');" asp-action="Delete" asp-route-id="@item.MaNguoiDung">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>