@using QuanLyKho.ViewModels.AccountViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <!-- Email input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label asp-for="TenDangNhap" class="form-label" for="form1Example13">Tên đăng nhập</label>
                        <input asp-for="TenDangNhap" id="form1Example13" class="form-control form-control-lg" placeholder="Tên đăng nhập" />
                        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-4">
                        <label asp-for="MatKhau" class="form-label" for="form1Example23">Password</label>
                        <input asp-for="MatKhau" type="password" id="form1Example23" class="form-control form-control-lg" placeholder="Password" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label asp-for="RememberMe" class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                    </div>

                    <!-- Submit button -->
                    <div class="form-outline mb-4">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">Đăng nhập</button>
                    </div>

                    @if (ViewData["ValidationError"] != null)
                    {
                        <br />
                        <br />
                        <div class="alert alert-danger" role="alert">
                            @ViewData["ValidationError"]
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</section>