@using QuanLyKho.ViewModels.DanhMucViewModels
@model IEnumerable<DanhMucViewModel>
@{
    ViewData["Title"] = "Index";
}


<div>
    <div class="row">
        <h2>Danh mục thiết bị</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <form asp-action="Index" class="flex-grow-1 me-3">
                <div class="row">
                    @* <div class="col-md-4">
                        <input name="searchString" class="form-control" placeholder="Tên danh mục" value="@ViewData["searchString"]" />
                    </div> *@
                    <div class="col-md-2">
                    <select name="danhMucFilter" class="form-select" asp-items="@ViewBag.DanhMucList" id="exampleSelect1">
                    <option value="">Tất cả danh mục</option>
                    </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        <a asp-action="Index" class="btn btn-secondary">Reset</a>
                    </div>
                </div>
            </form>
            <a asp-action="Create" class="btn btn-success">Thêm danh mục</a>
        </div>
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Tên danh mục
                        </th>
                        <th>
                            Mô tả
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.MaDanhMuc)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.TenDanhMuc)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.MoTa)
                            </td>
                            <td class="align-middle">
                                <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.MaDanhMuc">Edit</a>
                                <a type="button" class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.MaDanhMuc">Details</a>
                                <a type="button" class="btn btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');" asp-action="Delete" asp-route-id="@item.MaDanhMuc">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>