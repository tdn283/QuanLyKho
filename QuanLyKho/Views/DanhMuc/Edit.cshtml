@using QuanLyKho.ViewModels
@model QuanLyKho.ViewModels.DanhMucViewModels.DanhMucEditViewModel
@{
    ViewData["Title"] = "Cập nhật danh mục";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Cập nhật danh mục</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="DanhMuc" asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <input asp-for="MaDanhMuc" type="hidden">
                        <div class="mb-3">
                            <label asp-for="TenDanhMuc" class="form-label">Tên danh mục</label>
                            <input asp-for="TenDanhMuc" class="form-control" placeholder="Tên danh mục" required>
                            <div class="invalid-feedback">
                                Vui lòng nhập tên danh mục.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label">Mô tả</label>
                            <textarea asp-for="MoTa" class="form-control" placeholder="Mô tả" rows="4"></textarea>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-chevron-left"></i> Trở về</a>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
