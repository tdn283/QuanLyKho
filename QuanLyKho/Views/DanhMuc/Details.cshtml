@model QuanLyKho.ViewModels.DanhMucViewModels.DanhMucViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="card-title">Chi tiết danh mục</h2>
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th>Mã danh mục:</th>
                                        <td>@Model.MaDanhMuc</td>
                                    </tr>
                                    <tr>
                                        <th>Tên danh mục:</th>
                                        <td>@Model.TenDanhMuc</td>
                                    </tr>
                                    <tr>
                                        <th>Mô tả:</th>
                                        <td>@Model.MoTa</td>
                                    </tr>
                                </tbody>
                            </table>
                            <a asp-action="Index" class="btn btn-secondary">Trở về</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>