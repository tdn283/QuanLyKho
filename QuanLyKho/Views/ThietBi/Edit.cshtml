@using QuanLyKho.ViewModels
@model QuanLyKho.ViewModels.ThietBiViewModels.ThietBiEditViewModel
@{
    ViewData["Title"] = "Cập nhật thiết bị";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Cập nhật thiết bị</h2>
                </div>
                <div class="card-body">
                    <form asp-controller="ThietBi" asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="MaThietBi" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="TenThietBi" class="form-label">Tên thiết bị</label>
                                <input asp-for="TenThietBi" class="form-control" placeholder="Tên thiết bị" required>
                                <span asp-validation-for="TenThietBi" class="text-danger"></span>

                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Model" class="form-label">Model</label>
                                <input asp-for="Model" class="form-control" placeholder="Model">
                                <span asp-validation-for="Model" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaDanhMuc" class="form-label">Danh mục</label>
                                <select class="form-select" asp-for="MaDanhMuc" asp-items="ViewBag.DanhMucList" required>
                                    <option value="">Chọn danh mục</option>
                                </select>
                                <span asp-validation-for="MaDanhMuc" class="text-danger"></span>

                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaNhaCungCap" class="form-label">Nhà cung cấp</label>
                                <select class="form-select" asp-for="MaNhaCungCap" asp-items="ViewBag.NhaCungCapList" required>
                                    <option value="">Chọn nhà cung cấp</option>
                                </select>
                                <span asp-validation-for="MaNhaCungCap" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="NhaSanXuat" class="form-label">Hãng sản xuất</label>
                                <input asp-for="NhaSanXuat" class="form-control" placeholder="Hãng sản xuất">
                                <span asp-validation-for="NhaSanXuat" class="text-danger"></span>

                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ThoiGianBaoHanh" class="form-label">Thời gian bảo hành (tháng)</label>
                                <input asp-for="ThoiGianBaoHanh" type="number" min="0" step="1" class="form-control" placeholder="12">
                                <span asp-validation-for="ThoiGianBaoHanh" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="GiaBan" class="form-label">Giá bán</label>
                            <input asp-for="GiaBan" class="form-control" placeholder="Giá bán" required>
                            <span asp-validation-for="GiaBan" class="text-danger"></span>

                        </div>

                        <div class="mb-3">
                            <label asp-for="SoLuongCon" class="form-label">Số lượng còn lại</label>
                            <input asp-for="SoLuongCon" type="number" min="0" step="1" class="form-control" placeholder="Số lượng còn lại">
                            <span asp-validation-for="SoLuongCon" class="text-danger"></span>

                        </div>

                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label">Mô tả</label>
                            <textarea asp-for="MoTa" class="form-control" placeholder="Mô tả" rows="4"></textarea>
                        </div>



                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-chevron-left"></i> Trở về</a>
                            <button type="submit" class="btn btn-primary"><i class="bi bi-floppy"></i> Lưu thay đổi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
