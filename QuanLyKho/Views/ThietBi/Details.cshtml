@using QuanLyKho.ViewModels
@model QuanLyKho.ViewModels.ThietBiViewModels.ThietBiViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Chi tiết thiết bị</h2>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Mã thiết bị:</strong> @Model.MaThietBi</p>
                    <p><strong>Tên thiết bị:</strong> @Model.TenThietBi</p>
                    <p><strong>Model:</strong> @Model.Model</p>
                    <p><strong>Danh mục:</strong> @Model.TenDanhMuc</p>
                    <p><strong>Nhà cung cấp:</strong> @Model.TenNhaCungCap</p>
                    <p><strong>Hãng sản xuất:</strong> @Model.NhaSanXuat</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Thời gian bảo hành:</strong> @Model.ThoiGianBaoHanh</p>
                    <p><strong>Trạng thái:</strong> @Model.TrangThai</p>
                    <p><strong>Số lượng còn lại:</strong> @Model.SoLuongCon</p>
                    <p><strong>Giá bán:</strong> @Model.GiaBan</p>
                    <p><strong>Mô tả:</strong> @Model.MoTa</p>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-start mt-4">
        <a asp-action="Index" class="btn btn-secondary">Trở về</a>
    </div>
</div>