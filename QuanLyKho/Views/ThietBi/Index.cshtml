@using QuanLyKho.ViewModels.ThietBiViewModels
@model IEnumerable<ThietBiViewModel>
@{
    ViewData["Title"] = "Index";
}


<div>
    <div class="row">
        <h2>Danh sách thiết bị</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <form asp-action="Index" class="flex-grow-1 me-3">
                <div class="row">
                    <div class="col-md-4">
                        <input name="searchString" class="form-control" placeholder="Tên thiết bị" value="@ViewData["searchString"]" />
                    </div>
                    @* <div class="col-md-2">
                        <select name="vaiTroFilter" class="form-select" asp-items="@ViewBag.VaiTroList" id="exampleSelect1">
                            <option value="">Tất cả vai trò</option>
                        </select>
                    </div> *@
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        <a asp-action="Index" class="btn btn-secondary">Reset</a>
                    </div>
                </div>
            </form>
            <a asp-action="Create" class="btn btn-success">Thêm thiết bị</a>
        </div>
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Tên thiết bị
                        </th>
                        <th>
                            Nhà cung cấp
                        </th>
                        <th>
                            Thời gian bảo hành
                        </th>
                        <th>
                            Đơn giá
                        </th>
                        <th>
                            Trạng thái
                        </th>
                        <th>
                            Số lượng còn
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.MaThietBi)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.TenThietBi)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.TenNhaCungCap)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.ThoiGianBaoHanh) tháng
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.GiaBanFormat) VNĐ
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.TrangThai)
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.SoLuongCon)
                            </td>
                            <td class="align-middle">
                                <a type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.MaThietBi">Edit</a>
                                <a type="button" class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.MaThietBi">Details</a>
                                <a type="button" class="btn btn-outline-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa thiết bị này không?');" asp-action="Delete" asp-route-id="@item.MaThietBi">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>